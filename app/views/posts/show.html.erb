<div class="row">
  <div class="large-12 large-offset-1 small-16 small-offset-1 columns right-container ">
    <% if @post.category == 'life' %>
      <p class="categories life text-center"><%= @post.category%></p>
    <% elsif @post.category == 'discover' %>
      <p class="categories discover text-center"><%= @post.category%></p>
    <% elsif @post.category == 'humor' %>
      <p class="categories humor text-center"><%= @post.category%></p>
    <% elsif @post.category == 'travel' %>
      <p class="categories travel text-center"><%= @post.category%></p>
    <% elsif @post.category == 'good' %>
      <p class="categories good text-center"><%= @post.category%></p>
    <% end %>

    <h2 class="text-center"><%= @post.title %></h2>
    <div class ="large-18 columns text-center"><%= image_tag @post.user.avatar.url(:thumb), id: "author-post-img" %></div>
    <p class="text-center"><%= link_to @post.user.name, user_path(@post.user)%></p>
    
    <div class="row">
      <div class="large-16 large-offset-1 columns"><%= @post.body.html_safe%></div>
      <div class="large-1 columns"></div>
    </div>
    
    <div class="row">
      <div class="large-16 large-offset-1 columns fb-comments" data-numposts="5" data-width="100%"></div>
      <div class="large-1 coulumns"></div>
    </div>

  </div>
  <div class="large-4 columns"></div>
  <div class="large-1 columns"></div>
</div>